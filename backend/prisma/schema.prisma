generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum EmployeeStatus {
  ACTIVE
  PAUSED
  REMOVED
}

model Wallet {
  id          String   @id @default(uuid())
  state       String
  walletSetId String
  custodyType String
  address     String   @unique
  blockchain  String
  accountType String
  updateDate  DateTime
  createDate  DateTime

  @@index([walletSetId])
}

model Employee {
  id             String  @id @default(uuid())
  name           String
  walletAddress  String
  salaryAmount   Decimal @db.Decimal(18, 6) // USDC precision
  preferredChain String

  status EmployeeStatus @default(ACTIVE)

  lastPaidAt DateTime?
  totalPaid  Decimal   @default(0) @db.Decimal(18, 6)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id String @id
}
