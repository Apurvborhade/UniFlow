generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum EmployeeStatus {
  ACTIVE
  PAUSED
  REMOVED
}

enum PreferredChain {
  ETH_SEPOLIA   @map("ETH-SEPOLIA")
  BASE_SEPOLIA  @map("BASE-SEPOLIA")
  AVAX_FUJI     @map("AVAX-FUJI")
  ARC_TESTNET   @map("ARC-TESTNET")
}

model Wallet {
  id          String   @id @default(uuid())
  state       String
  walletSetId String
  custodyType String
  address     String   @unique
  blockchain  String
  accountType String
  updateDate  DateTime
  createDate  DateTime

  @@index([walletSetId])
}

model Employee {
  id             String  @id @default(uuid())
  name           String
  walletAddress  String
  salaryAmount   Decimal @db.Decimal(18, 6) // USDC precision
  preferredChain PreferredChain

  status EmployeeStatus @default(ACTIVE)

  lastPaidAt DateTime?
  totalPaid  Decimal   @default(0) @db.Decimal(18, 6)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payrolls Payroll[]
}

model Transaction {
  id String @id
}

enum Frequency {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
}

model PayrollSchedule {
  id        String    @id @default(uuid())
  frequency Frequency
  runAt     DateTime
  isActive  Boolean   @default(true)
  lastRunAt DateTime?
  nextRunAt DateTime?
}

model Payroll {
  id         String @id @default(uuid())
  employeeId String

  amount          Decimal   @db.Decimal(18, 6)
  nextPaymentDate DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  transactionId   String?
  employee        Employee  @relation(fields: [employeeId], references: [id])

  @@index([employeeId])
}
